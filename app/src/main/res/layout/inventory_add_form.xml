<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:hintTextAppearance="@style/EditTextTheme"
        app:boxStrokeColor="@color/colorPrimary"
        app:hintAnimationEnabled="true"
        android:textColorHint="@color/colorPrimary">


        <com.satsuware.usefulviews.LabelledSpinner
            android:id="@+id/txt_category"
            style="@style/EditTextTheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/EditTextTheme"
            app:labelText="Select Category"
            app:widgetColor="@color/colorPrimary"/>



    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:hintTextAppearance="@style/EditTextTheme"
        app:boxStrokeColor="@color/colorPrimary"
        app:hintAnimationEnabled="true"
        android:textColorHint="@color/colorPrimary">

        <EditText
            android:id="@+id/txt_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Product Barcode"
            android:theme="@style/EditTextTheme"
            android:inputType="text"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:hintTextAppearance="@style/EditTextTheme"
        app:boxStrokeColor="@color/colorPrimary"
        app:hintAnimationEnabled="true"
        android:textColorHint="@color/colorPrimary">

        <EditText
            android:id="@+id/txt_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Product Name"
            android:theme="@style/EditTextTheme"
            android:inputType="text"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:hintTextAppearance="@style/EditTextTheme"
        app:boxStrokeColor="@color/colorPrimary"
        app:hintAnimationEnabled="true"
        android:textColorHint="@color/colorPrimary">

        <EditText
            android:id="@+id/txt_stock_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Quantity In Stock"
            android:theme="@style/EditTextTheme"
            android:inputType="numberDecimal"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:hintTextAppearance="@style/EditTextTheme"
        app:boxStrokeColor="@color/colorPrimary"
        app:hintAnimationEnabled="true"
        android:textColorHint="@color/colorPrimary">

        <EditText
            android:id="@+id/txt_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Price Per Item"
            android:theme="@style/EditTextTheme"
            android:inputType="numberDecimal"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:hintTextAppearance="@style/EditTextTheme"
        app:boxStrokeColor="@color/colorPrimary"
        app:hintAnimationEnabled="true"
        android:textColorHint="@color/colorPrimary">

        <EditText
            android:id="@+id/txt_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Cost Per Item"
            android:theme="@style/EditTextTheme"
            android:inputType="numberDecimal"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_save_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Save"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="@drawable/button_primary"
            android:drawableLeft="@drawable/ic_save_black_24dp"
            android:pointerIcon="hand"
            android:layout_alignParentLeft="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/btn_reset_general_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Cancel"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="@drawable/button_primary"
            android:drawableLeft="@drawable/ic_cancel_black_24dp"
            android:pointerIcon="hand"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

    </LinearLayout>




</LinearLayout>