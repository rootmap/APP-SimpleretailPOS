<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.simpleretailpos">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_simpleretail_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_simpleretail_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ExpenseActivity"></activity>
        <activity android:name=".PaymentActivity" />
        <activity android:name=".ProfitActivity" />
        <activity android:name=".PosActivity" />
        <activity android:name=".SalesReportActivity" />
        <activity android:name=".ReportActivity" />
        <activity android:name=".ExpenseListActivity" />
        <activity android:name=".ExpenseCreateActivity" />
        <activity android:name=".InventoryListActivity" />
        <activity android:name=".InventoryCreateActivity" />
        <activity android:name=".CustomerLeadListActivity" />
        <activity android:name=".CustomerLeadActivity" />
        <activity android:name=".CustomerListActivity" />
        <activity android:name=".CustomerAddActivity" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>