<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_customer_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerAddActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:padding="0dp"
        android:id="@+id/customer_add_toolbar"
        android:orientation="horizontal">



            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:minHeight="?attr/actionBarSize"
                android:textAlignment="center"
                design:logo="@drawable/customer_icon_add_circle_outline_white"
                android:outlineAmbientShadowColor="@color/white"
                design:title="  Add New Customer"
                design:titleTextColor="@color/white"
                android:background="@color/SimpleretailPOSThemeColor" />

        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ScrollView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/customer_add"/>

            </ScrollView>

        </RelativeLayout>
        







    </RelativeLayout>


    <include layout="@layout/customer_bottom_menu"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>