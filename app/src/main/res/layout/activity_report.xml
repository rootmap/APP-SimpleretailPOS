<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    tools:context=".ReportActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:padding="0dp"
        android:id="@+id/customer_add_toolbar"
        android:orientation="horizontal">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:minHeight="?attr/actionBarSize"
            android:textAlignment="center"
            design:logo="@drawable/customer_icon_add_circle_outline_white"
            android:outlineAmbientShadowColor="@color/white"
            design:title="  Choose report"
            design:titleTextColor="@color/white"
            android:background="@color/SimpleretailPOSThemeColor" />


        <ImageButton
            android:layout_width="37dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="11dp"
            android:layout_marginRight="12dp"
            android:id="@+id/reportBacktoHome"
            android:background="@drawable/ic_home_white" />


        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ScrollView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/report_list"/>

            </ScrollView>

        </RelativeLayout>








    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>